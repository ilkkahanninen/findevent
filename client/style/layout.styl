// BRAND

brand_primary = #DF2531
brand_secondary = #D70060
text_black = #444

// FONTS

google_fonts = {
  'Raleway': '400,900'
}
fallback_fonts = Arial, Helvetica, sans-serif

// GRID SYSTEM

pg_container_width = 1600px
pg_columns = 12
pg_gutter = 5px
pg_thresholds = {
  xs: 0,
  sm: 768px,
  md: 992px,
  lg: 1200px
}

// FORMS

input_border_color = #d0d0d0
input_background = white
input_text_color = #666

// BUTTONS

btn_text_color = white
btn_colors = {
  default: brand_primary,
  secondary: brand_secondary,  
  green: #61AE24,
  yellow: #D0D102,
  orange: #F18D05,
  red: #E54028,
  magenta: #D70060,
  blue: #00A1CB,
  cyan: #01A4A4,
  gray: #616161
}

// MISC

hr_color = #f0f0f0

// IMPORT POWER

@import "../../node_modules/powerchord/styl/imports"
@import "../../node_modules/powergrid/styl/powergrid"
@import "../../node_modules/powerchord/styl/powerchord"

// BODY

body {
  background #101010
  margin 0
}